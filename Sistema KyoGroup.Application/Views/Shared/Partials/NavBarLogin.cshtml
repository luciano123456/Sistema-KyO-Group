<!-- Modal Configuraciones (lista/edición) - ADAPTADO AL SEGUNDO DISEÑO -->
<div class="modal fade theme-indigo" id="modalConfiguracion" tabindex="-1" aria-labelledby="modalConfiguracionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content modal-config shadow-lg border-0 rounded-3">

            <!-- Header -->
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="modalConfiguracionLabel">
                    <i class="fa fa-cogs me-2"></i> Configuración
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <!-- Mensaje vacío -->
                <div id="lblListaVacia" class="alert alert-warning text-center py-2 mb-3" hidden>No hay resultados.</div>

                <!-- Contenedor lista + buscador -->
                <div class="list-container border rounded-3 p-2">
                    <div class="mb-2 d-flex gap-2">
                        <input type="text" class="form-control form-control-sm" id="txtBuscarConfig" placeholder="Buscar..." oninput="filtrarConfiguracionesLocal(this.value)">
                    </div>

                    <div id="configuracion-list" class="config-list">
                        <!-- La lista dinámica se inyecta aquí -->
                    </div>
                </div>

                <!-- Formulario de edición -->
                <div id="contenedorNombreConfiguracion" class="mt-4" hidden>
                    <label id="lblNombre" for="txtNombreConfiguracion" class="form-label fw-bold">Nombre</label>
                    <input type="text" class="form-control" id="txtNombreConfiguracion" required>
                    <input type="text" class="form-control" id="txtIdConfiguracion" hidden>

                    <!-- Combo dependiente (opcional) -->
                    <div id="divConfiguracionCombo" class="mt-3" hidden>
                        <label id="lblConfiguracionCombo" for="cmbConfiguracion" class="form-label fw-bold"></label>
                        <select class="form-select" id="cmbConfiguracion" required>
                            <option value="">Seleccione...</option>
                        </select>
                    </div>

                    <!-- Campo extra (opcional) -->
                    <div id="divExtraField" class="mt-3" hidden>
                        <label id="lblExtraField" for="txtExtraField" class="form-label fw-bold"></label>
                        <input type="text" class="form-control" id="txtExtraField" placeholder="">
                    </div>

                    <div class="d-flex gap-2 mt-3 btnModificarConfiguracion-container">
                        <button id="btnRegistrarModificarConfiguracion" class="btn btn-new flex-fill" onclick="guardarCambiosConfiguracion()">
                            <i class="fa fa-save me-1"></i> Modificar
                        </button>
                        <button class="btn btn-outline-secondary flex-fill" onclick="cancelarModificarConfiguracion()">
                            <i class="fa fa-times me-1"></i> Cancelar
                        </button>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer d-flex justify-content-between">
                <button id="agregarConfiguracion" class="btn btn-new btnAgregarConfiguracion" onclick="agregarConfiguracion()">
                    <i class="fa fa-plus me-1"></i> Añadir
                </button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Configuraciones (launcher de categorías) - MISMOS ESTILOS DEL SEGUNDO DISEÑO -->
<div class="modal fade theme-indigo" id="ModalEdicionConfiguraciones" tabindex="-1" aria-labelledby="ModalEdicionConfiguracionesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content modal-config">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalEdicionConfiguracionesLabel">
                    <i class="fa fa-cogs me-2"></i> Configuraciones
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body py-3">
                <!-- Grid responsiva: 1/2/3/4 columnas -->
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3" id="gridConfiguraciones">

                    <div class="col">
                        <button type="button" class="config-card w-100"
                                onclick="abrirConfiguracion('Rol', 'Roles')"
                                data-label="Rol" data-table="Roles">
                            <img src="/Imagenes/Roles.png" alt="" class="config-card__img" loading="lazy">
                            <span class="config-card__title">Roles</span>
                            <span class="config-card__subtitle">Permisos</span>
                        </button>
                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-new px-4" data-bs-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>


