@{
    ViewData["Title"] = "Insumos por Proveedor";
}

@section Estilos {
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Tus estilos -->
    <link href="~/css/ProveedoresInsumos.css" rel="stylesheet" />
    <link href="~/css/disenopantallas.css?v=1.0" rel="stylesheet" />
}

<div class="container page-99">
    <!-- Header tipo KPI -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-truck"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Insumos de Proveedores</h2>
                    <small class="text-muted-cc">Gestión y análisis por proveedor</small>
                </div>
            </div>

            <!-- KPIs -->
            <div class="ms-auto d-flex gap-3 flex-wrap">
                <div class="cc-stat"><div class="label">Cantidad</div><div class="value" id="kpiCantItems">0</div></div>
            </div>
        </div>
    </div>

    <!-- Tabla + Filtros -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">

                    <!-- Controles top -->
                    <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center">
                        <button class="btn btn-new d-flex align-items-center px-3 py-2" onclick="nuevoInsumo()">
                            <i class="fa fa-plus-square me-2"></i> Nuevo Insumo
                        </button>


                        <button class="btn btn-new text-white ms-auto" data-bs-toggle="modal" data-bs-target="#modalImportar">
                            <i class="fa fa-upload me-1"></i> Importar Insumos
                        </button>

                        <!-- Toggle de filtros -->
                        <button class="btn btn-outline-primary d-flex align-items-center" type="button" id="btnToggleFiltrosPI">
                            <i class="fa fa-arrow-down me-2" id="iconFiltrosP"></i> Filtros
                        </button>

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="dropdownColumnas"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenu"></ul>
                        </div>

                      
                    </div>

                    <!-- Panel de filtros (superior) -->
                    <form id="formFiltrosProvIns" class="filter-bar shadow-sm rounded-3 mb-3 p-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-12 col-md-6">
                                <label class="form-label">Proveedor</label>
                                <select id="ProveedorFiltro" class="form-select">
                                    <option value="-1" selected>Todos</option>
                                </select>
                            </div>

                            <div class="col-12 col-md-6 d-flex gap-2 mt-2 mt-md-0">
                                <button type="button" class="btn btn-primary flex-fill" onclick="aplicarFiltros()">
                                    <i class="fa fa-search me-1"></i> Buscar
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="limpiarFiltrosProvIns()">
                                    <i class="fa fa-eraser me-1"></i> Limpiar
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- DataTable -->
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap compact" id="grd_InsumosProveedor" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Código</th>
                                    <th>Descripción</th>
                                    <th>Costo Unitario</th>
                                    <th>Proveedor</th>
                                    <th>Fecha Actualización</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                   

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Edición (igual al tuyo) -->
<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Nuevo Insumo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formInsumo" class="row g-3">
                    <input type="text" class="input-nuevomodif" id="txtId" readonly hidden>
                    <div class="d-flex justify-content-end mt-2">
                        <small id="lblUltimaModif" class="text-new"></small>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label " for="txtCodigo">Codigo</label>
                        <input type="text" class="form-control" id="txtCodigo" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label " for="txtDescripcion">Descripcion</label>
                        <input type="text" class="form-control" id="txtDescripcion" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label " for="txtCostoUnitario">Costo Unitario</label>
                        <input type="text" class="form-control" id="txtCostoUnitario" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label lblDescripcion" for="Proveedores">Proveedor</label>
                        <select id="Proveedores" class="form-select">
                            <option value="-1" selected disabled>Seleccionar</option>
                        </select>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div id="errorCampos" class="alert alert-danger d-none">Debes completar los campos obligatorios.</div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-arrow-left"></i> Volver
                </button>
                <button type="button" id="btnGuardar" class="btn btn-new" onclick="guardarCambios()">
                    <i class="fa fa-check"></i> Registrar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Importar (igual al tuyo, sin cambios estructurales) -->
<div class="modal fade" id="modalImportar" tabindex="-1" aria-labelledby="modalImportarLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold">Importar Insumos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formImportar">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label" for="ProveedorImportar">Proveedor</label>
                            <select id="ProveedorImportar" class="form-select" required>
                                <option value="">Seleccione proveedor...</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="archivoExcel">Archivo Excel</label>
                            <input type="file" class="form-control" id="archivoExcel" accept=".xlsx,.xls" required />
                        </div>
                        <div class="col-md-6 mx-auto">
                            <button type="button" id="btnDescargarMaqueta" class="btn btn-outline-primary w-100 mt-2" onclick="descargarMaqueta()">
                                <i class="fa fa-download"></i> Descargar maqueta
                            </button>
                        </div>
                        <div class="col-md-12">
                            <div id="comparandoLoader" class="d-none text-center mt-3">
                                <div class="spinner-border text-primary" role="status"></div>
                                <p class="mt-2 mb-0 fw-semibold text-primary">Comparando insumos con la base de datos...</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3 d-none" id="bloqueBuscador">
                        <input type="text" id="buscadorVistaPrevia" class="form-control form-control-sm" placeholder="Buscar insumo..." onkeyup="filtrarVistaPrevia()">
                    </div>

                    <div class="table-responsive d-none mt-3 tabla-scroll-limitada" id="bloqueTabla" style="max-height: 400px;">
                        <table class="table table-bordered table-sm text-center align-middle mb-0" id="vistaPrevia">
                            <thead class="colorEncabezadoTabla text-white">
                                <tr>
                                    <th class="text-white">Código</th>
                                    <th class="text-white col-descripcion">Descripción</th>
                                    <th class="text-white">P. Anterior</th>
                                    <th class="text-white">P. nuevo</th>
                                    <th class="text-white">Dif</th>
                                    <th class="text-white">Porc.</th>
                                </tr>
                            </thead>
                            <tbody style="font-size: 0.9rem;"></tbody>
                        </table>
                    </div>

                    <div id="resumenContainer" class="mt-3 d-none">
                        <button class="btn btn-outline-info btn-sm mb-2" type="button" id="btnToggleResumen" onclick="toggleResumen()">
                            <i class="fa fa-chevron-down me-1" id="iconoResumen"></i> Ver promedios
                        </button>
                        <div id="resumenImportacion" class="alert alert-info mt-2" style="font-size: 0.9rem; display: none;"></div>
                    </div>

                    <div id="errorImportar" class="alert alert-danger d-none mt-3">Complete todos los campos.</div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times"></i> Cancelar
                </button>
                <button type="button" id="btnImportar" class="btn btn-new" onclick="enviarDatos()">
                    <i class="fa fa-check"></i> Importar
                </button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {

    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <!-- Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/moment@2.30.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.30.1/locale/es.js"></script>
 
    <script src="~/js/ProvedoresInsumos.js?v=2.0"></script>
}
