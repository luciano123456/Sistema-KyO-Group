@{
    ViewData["Title"] = "Proveedores";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Base -->
    <link rel="stylesheet" href="~/css/usuarios.css" />
    <link rel="stylesheet" href="~/css/DisenoPantallas.css" />
}

<div class="container page-99">
    <!-- Header tipo KPI -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-truck"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Proveedores</h2>
                    <small class="text-muted-cc">Administración y acciones rápidas</small>
                </div>
            </div>

            <!-- KPIs -->
            <div class="ms-auto d-flex gap-3 flex-wrap">
                <div class="cc-stat">
                    <div class="label">Cantidad</div>
                    <div class="value" id="kpiCantProveedores">0</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">

                    <!-- Controles top -->
                    <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center mb-2">
                        <button class="btn btn-new d-flex align-items-center px-3 py-2 ms-auto"
                                onclick="nuevoProveedor()">
                            <i class="fa fa-plus-square me-2"></i> Nuevo Proveedor
                        </button>

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="btnConfigColsG"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu" id="configColumnasMenu" aria-labelledby="btnConfigColsG"></ul>
                        </div>
                    </div>

                    <!-- DataTable -->
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap compact" id="grd_Proveedores" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Apodo</th>
                                    <th>Ubicacion</th>
                                    <th>Telefono</th>
                                    <th>CBU</th>
                                    <th>CUIT</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                </div><!-- /tabla-wrap -->
            </div><!-- /card-glass -->
        </div>
    </div>
</div>

<!-- Modal Proveedores -->
<div class="modal fade" id="modalProveedor" tabindex="-1" aria-labelledby="modalProveedorLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-edicion">
        <div class="modal-content cc-modal">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalProveedorLabel">Editar Proveedor</h5>
                <button type="button" class="btn-close custom-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formEditarProveedor" class="row g-3">
                    <input type="text" id="provId" hidden readonly>

                    <div class="d-flex justify-content-end mt-2">
                        <small id="lblUltimaModif" class="text-new"></small>
                    </div>

                    <div class="col-md-6">
                        <label for="provNombre" class="form-label">Nombre (*)</label>
                        <input type="text" class="form-control" id="provNombre" required>
                        <div class="invalid-feedback">Campo obligatorio</div>
                    </div>

                    <div class="col-md-6">
                        <label for="provApodo" class="form-label">Apodo</label>
                        <input type="text" class="form-control" id="provApodo">
                    </div>

                    <div class="col-md-6">
                        <label for="provUbicacion" class="form-label">Ubicación</label>
                        <input type="text" class="form-control" id="provUbicacion">
                    </div>

                    <div class="col-md-6">
                        <label for="provTelefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="provTelefono">
                    </div>

                    <div class="col-md-6">
                        <label for="provCbu" class="form-label">CBU</label>
                        <input type="text" class="form-control" id="provCbu">
                    </div>

                    <div class="col-md-6">
                        <label for="provCuit" class="form-label">CUIT</label>
                        <input type="text" class="form-control" id="provCuit">
                    </div>

                    <div class="col-12">
                        <div id="provErrorCampos" class="alert alert-danger d-none mt-2">
                            Debes completar los campos requeridos.
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer modal-footer-cc">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardarProv" class="btn btn-new" onclick="guardarProveedor()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />


@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="~/js/site.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>

    <script src="~/js/Proveedores.js?v=1.0"></script>
}
